
@{
    ViewData["Title"] = "Documento";
    Layout = null;
}

<div class="container" style="margin:0">
    @if (ViewBag.imagen != null)
    {
        @if(ViewBag.imagen.Contains(".pdf"))
        {
            <embed alt="" src="@ViewBag.imagen" style="width:100%;height:100%" />
        }
        else
        {
            <image alt="" src="@ViewBag.imagen" style="width:100%;" />
        }
    }
    else
    {
        <div style="background-color: lightcoral;color:white; padding:1em;" align="center"><strong>Atencion!!! La imagen no pudo ser encontrada.</strong></div>
    }
</div>

